@model EmployeeManagementSystem.Models.EmployeeApplication

@{
    ViewBag.Title = "Details";
}

<!-- Bootstrap & FontAwesome -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<!-- Google Fonts - Quicksand -->
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Quicksand', sans-serif;
        background-color: #f9f9f9;
    }

    .theme-header {
        color: #232B5D;
        font-weight: 600;
    }

    .theme-btn {
        background-color: #232B5D;
        color: white;
        border: none;
        font-weight: 600;
    }

        .theme-btn:hover {
            background-color: #1a2048;
            color: white;
        }

    .cancel-btn {
        border: 1px solid #232B5D;
        color: #232B5D;
        background-color: white;
        font-weight: 600;
    }

        .cancel-btn:hover {
            background-color: #f0f0f0;
        }

    .card {
        border: none;
        border-radius: 12px;
    }

    dt {
        font-weight: 600;
        color: #232B5D;
    }

    dd {
        color: #555;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center theme-header mb-3">
            <i class="fas fa-info-circle"></i> Application Details
        </h2>

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Employee ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployeeId)</dd>

            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

            <dt class="col-sm-3">Reply</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Reply)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn theme-btn px-4 mr-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a href="@Url.Action("Index")" class="btn cancel-btn px-4">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
