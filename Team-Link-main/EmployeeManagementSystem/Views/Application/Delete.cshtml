@model EmployeeManagementSystem.Models.EmployeeApplication

@{
    ViewBag.Title = "Delete";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<style>
    body {
        font-family: 'Quicksand', sans-serif;
        background-color: #f9f9f9;
    }

    .theme-header {
        color: #232B5D;
        font-weight: 600;
    }

    .theme-btn {
        background-color: #232B5D;
        color: white;
        border: none;
        font-weight: 600;
    }

        .theme-btn:hover {
            background-color: #1a2048;
            color: white;
        }

    .cancel-btn {
        border: 1px solid #232B5D;
        color: #232B5D;
        background-color: white;
        font-weight: 600;
    }

        .cancel-btn:hover {
            background-color: #f0f0f0;
        }

    .card {
        border: none;
        border-radius: 12px;
    }

        .card h2 {
            font-weight: 700;
            font-size: 24px;
        }

        .card h5 {
            font-weight: 500;
            color: #666;
        }

    dt {
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center theme-header mb-3">
            <i class="fas fa-trash-alt"></i> Confirm Deletion
        </h2>

        <h5 class="text-center mb-4">Are you sure you want to delete this application?</h5>

        <dl class="row">
            <dt class="col-sm-3 theme-header">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 theme-header">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 theme-header">Employee ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EmployeeId)</dd>

            <dt class="col-sm-3 theme-header">Subject</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

            <dt class="col-sm-3 theme-header">Message</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

            <dt class="col-sm-3 theme-header">Reply</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Reply)</dd>

            <dt class="col-sm-3 theme-header">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="text-center mt-4">
                <input type="submit" value="Delete" class="btn theme-btn px-4" />
                <a href="@Url.Action("Index", "Application")" class="btn cancel-btn ml-2 px-4">Cancel</a>
            </div>
        }
    </div>
</div>
