@model EmployeeManagementSystem.Models.EmployeeApplication

@{
    ViewBag.Title = "Edit";
}

<!-- Bootstrap & FontAwesome -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<!-- Google Fonts - Quicksand -->
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet" />

<style>
    body {
        font-family: 'Quicksand', sans-serif;
        background-color: #f9f9f9;
    }

    .theme-header {
        color: #232B5D;
        font-weight: 600;
        font-size: 24px;
    }

    .theme-btn {
        background-color: #232B5D;
        color: white;
        border: none;
        font-weight: 600;
    }

        .theme-btn:hover {
            background-color: #1a2048;
        }

    .cancel-btn {
        border: 1px solid #232B5D;
        color: #232B5D;
        background-color: white;
        font-weight: 600;
    }

        .cancel-btn:hover {
            background-color: #f0f0f0;
        }

    label {
        color: #232B5D;
        font-weight: 600;
        margin-bottom: 0.4rem;
        display: inline-block;
    }

    .card {
        border: none;
        border-radius: 12px;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }


    .form-control:focus, .form-select:focus {
        border-color: #232B5D !important;
        box-shadow: 0 0 0 0.2rem rgba(35, 43, 93, 0.25) !important;
        outline: none;
    }
</style>



<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center theme-header mb-3">
            <i class="fas fa-edit"></i> Edit Application
        </h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.EmployeeId)
                @Html.TextBoxFor(model => model.EmployeeId, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Subject)
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Message)
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows = 4, @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Reply)
                @Html.TextAreaFor(model => model.Reply, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(model => model.Status)
                @Html.DropDownListFor(model => model.Status, new SelectList(new[] { "Pending", "Accepted", "Rejected" }, Model.Status), "-- Select Status --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="Save" class="btn theme-btn px-4 me-2" />
                <a href="@Url.Action("Index")" class="btn cancel-btn px-4">Back to List</a>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
