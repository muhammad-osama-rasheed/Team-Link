@model EmployeeManagementSystem.Models.Department

@{
    ViewBag.Title = "Delete Department";
}

<link href="~/Content/Home.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

<div class="container mt-5 d-flex justify-content-center">
    <div class="card-container p-4" style="width: 100%; max-width: 400px;">
        <h4 class="mb-4" style="color: #b32d2e; font-family: Quicksand, sans-serif;">
            <i class="fas fa-exclamation-triangle" style="color: #b32d2e;"></i>
            Confirm Delete
        </h4>
        <p style="font-size: 16px;">Are you sure you want to delete this department?</p>
        <div class="mb-2">
            <strong>ID:</strong> @Model.DepartmentId
        </div>
        <div class="mb-4">
            <strong>Name:</strong> @Model.Name
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-block" style="width:48%;">Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-block" style="width:48%;">Cancel</a>
            </div>
        }
    </div>
</div>