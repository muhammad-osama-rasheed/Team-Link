@model IEnumerable<EmployeeManagementSystem.Models.Department>

@{
    ViewBag.Title = "Departments";
}

<link href="~/Content/Home.css" rel="stylesheet" type="text/css" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

<h2 class="mt-4 mb-4">Departments</h2>

<div class="row d-flex justify-content-end mt-2">
    <div class="col-lg-2 col-md-3 col-sm-4 col-6">
        <div class="add-emp-btn" onclick="location.href='@Url.Action("Create", "Department")'">
            <span class="btn-text">Add Department</span>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        @foreach (var department in Model)
        {
            <div class="col-lg-3 col-md-4 col-6 mb-4">
                <div class="card-container">
                    <div class="d-flex flex-column align-items-start mb-2">
                        <strong class="title" style="font-size: 1.2rem;">@department.Name</strong>
                        <span class="count" style="font-size: 1rem; color: #232B5D;">Dep Id: @department.DepartmentId</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <i class="fas fa-building icon"></i>
                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = department.DepartmentId }, new { @class = "btn btn-sm btn-outline-secondary me-2" })
                            @Html.ActionLink("Delete", "Delete", new { id = department.DepartmentId }, new { @class = "btn btn-sm btn-outline-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>