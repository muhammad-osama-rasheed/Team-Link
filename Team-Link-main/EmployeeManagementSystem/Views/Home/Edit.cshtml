@model EmployeeManagementSystem.Models.Employee

@{
    ViewBag.Title = "Edit Employee";
}

<link href="~/Content/AddEmployee.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="card">
        <h5>✏️ Edit Employee</h5>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Name</label>
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. Muhammad Osama" } })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. abc@gmail.com" } })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Gender</label>
                    @Html.EditorFor(m => m.Gender, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. Male" } })
                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Age</label>
                    @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. 20" } })
                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Address</label>
                    @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. Street, City" } })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Phone</label>
                    @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. 03072799307" } })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Designation</label>
                    @Html.EditorFor(m => m.Designation, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. Software Engineer" } })
                    @Html.ValidationMessageFor(m => m.Designation, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Department</label>
                    @Html.EditorFor(m => m.Department, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. IT" } })
                    @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Salary</label>
                    @Html.EditorFor(m => m.Salary, new { htmlAttributes = new { @class = "form-control", placeholder = "ex. 150000" } })
                    @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Password <span class="text-muted" style="font-size:0.85em;">(Leave blank to keep current password)</span></label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Leave blank to keep current" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="form-label">Confirm Password</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Leave blank to keep current" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-center mt-4">
                <input type="submit" value="Save Changes" class="btn btn-submit" />
            </div>
        }

        <a href="@Url.Action("Index", "Home")" class="back-link">Back to Home</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>