@model EmployeeManagementSystem.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Optional: Add your layout here
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


<style>
    body {
        font-family: 'Quicksand', sans-serif;
    }

    .theme-bg {
        background-color: #232B5D !important;
    }

    .btn-theme {
        background-color: #232B5D;
        color: #fff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-theme:hover {
            background-color: #1b224a;
            color: #fff;
        }

    .delete-warning {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .card-header h3 {
        font-weight: 600;
    }

    .card-body dl dt {
        font-weight: 600;
    }

    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 6px;
    }
</style>

<!-- Main Section -->
<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header theme-bg text-white py-3 px-4">
            <h4 class="mb-0">🗑️ Delete Employee</h4>
        </div>
        <div class="card-body px-4 py-4">
            <div class="delete-warning mb-4 d-flex align-items-center">
                <span  class="mb-1">⚠️</span>
                <span style="color: #000000B3; font-size: 16px; margin-left: 5px;"> Are you sure you want to permanently delete this employee?</span>
            </div>
           
            <hr class="mb-4" />

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Gender)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Age)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Designation)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Designation)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Department)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Salary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Password)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IsActive)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </dl>

          
            <div class="text-center mt-5">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-theme px-5 py-2 me-2">
                        <i  class="bi bi-trash"></i> Delete
                    </button>
                    @Html.ActionLink("❌ Cancel", "Index", null, new { @class = "btn btn-outline-secondary px-5 py-2" })
                }
            </div>
        </div>
    </div>
</div>
